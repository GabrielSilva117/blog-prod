<style>
  p#cont{
    font: normal 22px Arial sans-serif;
    text-align: justify;
  }
  p#desc{
    font-size: 16px;
  }
</style>
<h2>Post page:</h2>
<hr>
<a href="/posts/add"><button class="btn btn-outline-primary">New Post</button></a>
<hr>
{{#each posts}}
<div class="card mt-2">
  <div class="card-body">
    <h2>{{title}}</h2>
    <p id="cont">{{content}}</p>
    <p id="desc">Description: {{description}}</p>
    <small>Slug: {{slug}}</small><br>
    <small>Category: {{category.name}}</small><br>
    <small>Date: {{date}}</small>
  </div>
</div>
{{else}}
<h2>No post registered</h2>
{{/each}}