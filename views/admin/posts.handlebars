<style>
  p#desc{
    font-size: 18px;
  }
  p#cont{
    text-align: justify;
    font-size: 20px
  }
</style>
<h2>Post list:</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-primary">New Post</button></a>
<hr>
{{#each posts}}
<div class="card mt-2">
  <div class="card-body">
      <h4>{{title}}</h4>
      <p id="cont" class="mt-2">{{content}}</p>
      <p id="desc">Description: {{description}}</p>
      <small>Slug: {{slug}}</small><br>
      <small>Category: {{category.name}}</small><br>
      <small>Date: {{date}}</small><br>
      <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-outline-primary mt-3 " type="submit">Edit</button></a>
      <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-outline-danger mt-3 mx-2" type="submit">Delete</button></a>
    </div>
</div>
{{else}}
  <h4>No post registered</h4>  
{{/each}}